<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/character_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_character"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@id/character_o_button"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/character_o_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/character_o"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/character_x_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/character_label" />

    <Button
        android:id="@+id/character_x_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/character_o_button"
        app:layout_constraintStart_toEndOf="@id/character_o_button"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/character_x" />


</androidx.constraintlayout.widget.ConstraintLayout>