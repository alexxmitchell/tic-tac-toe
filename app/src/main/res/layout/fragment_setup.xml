<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/character_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/name_input"
        android:text="@string/name"
        tools:layout_editor_absoluteX="154dp"
        tools:layout_editor_absoluteY="162dp" />

    <EditText
        android:id="@+id/name_input"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/name_label"
        android:text=""
        android:inputType="text" />

    <TextView
        android:id="@+id/character_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/character_o_button"
        app:layout_constraintTop_toBottomOf="@id/name_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/select_character"
        tools:layout_editor_absoluteX="65dp"
        tools:layout_editor_absoluteY="343dp" />

    <Button
        android:id="@+id/character_o_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/character_label"
        app:layout_constraintStart_toEndOf="@id/character_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/character_o" />

    <Button
        android:id="@+id/character_x_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/character_o_button"
        app:layout_constraintBottom_toBottomOf="@id/character_label"
        app:layout_constraintStart_toEndOf="@id/character_label"
        android:text="@string/character_x" />


</androidx.constraintlayout.widget.ConstraintLayout>